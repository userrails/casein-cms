<!-- Scaffolding generated by Casein v5.0.1.0 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Address", :address %></th>
			<th><%= casein_sort_link "Zipcode", :zipcode %></th>
			<th><%= casein_sort_link "Lat", :lat %></th>
			<th><%= casein_sort_link "Lng", :lng %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% contacts.each do |contact| %>
		<tr>
			<td><%= casein_table_cell_link contact.address, casein_contact_path(contact) %></td>
			<td><%= casein_table_cell_link contact.zipcode, casein_contact_path(contact) %></td>
			<td><%= casein_table_cell_link contact.lat, casein_contact_path(contact) %></td>
			<td><%= casein_table_cell_link contact.lng, casein_contact_path(contact) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_contact_path(contact), :method => :delete, :data => { :confirm => "Are you sure you want to delete this contact?" }) %>
			</td>
		</tr>
	<% end %>
</table>